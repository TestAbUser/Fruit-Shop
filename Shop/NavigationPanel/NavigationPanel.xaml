<UserControl x:Class="Shop.NavigationPanel.NavigationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shop.NavigationPanel"
             xmlns:hp="clr-namespace:Shop.HomePage"
             xmlns:cp="clr-namespace:Shop.CartPage" 
             d:DataContext="{d:DesignInstance Type=local:NavigationViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ImageBrush x:Key="mouse_over"
                    ImageSource="/Images/hamburger_icon.png"/>
        <Style x:Key="toggle_style" TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border x:Name="border"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" 
                                     Value="True">
                                <Setter Property="Background"
                                        TargetName="border"
                                        Value="{StaticResource mouse_over}"/>

                                <Setter Property="BorderBrush"
                                        TargetName="border"
                                        Value="{StaticResource mouse_over}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" 
                                     Value="True">
                                <Setter Property="Background"
                                        TargetName="border"
                                        Value="{StaticResource mouse_over}"/>

                                <Setter Property="BorderBrush"
                                        TargetName="border"
                                        Value="{StaticResource mouse_over}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <StackPanel Background="CadetBlue" 
                Name="Navigation" 
                Width="65">
        <Grid Height="90">
            <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   Margin="73,-20,0,0"
                                   Text="Menu"
                                   Foreground="Black"
                                   FontSize="22"
                                   Background="Transparent"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>

            <ToggleButton Grid.Column="0"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      Height="30"
                                      Width="30"
                                      Margin="18,-20,0,0"
                                      BorderThickness="0"
                                      Style="{StaticResource toggle_style}">

                <ToggleButton.Background>
                    <ImageBrush ImageSource="/Images/hamburger_icon.png" 
                                Stretch="Fill"/>
                </ToggleButton.Background>
                <ToggleButton.Triggers>
                    <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                        <BeginStoryboard>
                            <Storyboard x:Name="HidePanel">
                                <DoubleAnimation
                                                Storyboard.TargetName="Navigation"
                                                Storyboard.TargetProperty="Width"
                                                BeginTime="0:0:0"
                                                From="230" To="65"
                                                Duration="0:0:0.2">

                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="ToggleButton.Checked">
                        <BeginStoryboard>
                            <Storyboard x:Name="ShowPanel">
                                <DoubleAnimation
                                                Storyboard.TargetName="Navigation"
                                                Storyboard.TargetProperty="Width"
                                                BeginTime="0:0:0"
                                                From="65" To="230"
                                                Duration="0:0:0.3">
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </ToggleButton.Triggers>
            </ToggleButton>
        </Grid>
            
                <ListView x:Name="list_view"
                          Background="Transparent"
                          BorderBrush="Transparent"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ItemsSource="{Binding PageViewModels}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                                <Button Background="Transparent"
                                        Command="{Binding 
                                    DataContext.SwitchPageCommand,
                                    RelativeSource={RelativeSource 
                                    AncestorType={x:Type Window}}}"
                                        CommandParameter="{Binding}">
                                    <StackPanel Orientation="Horizontal"
                                                Width="230">
                                        <Image Source="{Binding PageIconUrl}"
                                               Stretch="None"
                                               Margin="12,0,0,0"/>
                                        <TextBlock Text= "{Binding PageName}"
                                                   Margin="25,0,0,0"/>
                                    </StackPanel>
                                </Button>
                        </DataTemplate>
                    </ListView.ItemTemplate>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                <Border x:Name="brd"
                                                    Height="50"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}"
                                                    SnapsToDevicePixels="True">

                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>

                                </Border>
                                <ControlTemplate.Triggers>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsMouseOver" 
                                                                   Value="True"/>
                                        </MultiTrigger.Conditions>
                                        <Setter Property="Background"
                                                                TargetName="brd"
                                                                Value="#404D5B"/>
                                        <Setter Property="BorderBrush"
                                                                TargetName="brd"
                                                                Value="#404D5B"/>

                                    </MultiTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
    </ListView>
    </StackPanel>

</UserControl>